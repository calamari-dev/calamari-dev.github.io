---
import mail from "../assets/mail.svg";
import twitter from "../assets/twitter.svg";
---

<style>
  .footer {
    background: var(--color-document);
    border-top: solid 2px var(--color-primary);
    height: var(--height-footer);
    position: relative;
  }

  .footer__snslist {
    left: 50%;
    position: absolute;
    top: 35%;
    transform: translate(-50%, -50%);
  }

  .footer__copyright {
    font-size: 0.95rem;
    left: 50%;
    position: absolute;
    top: 75%;
    transform: translate(-50%, -50%);
  }

  .snslist {
    display: flex;
    list-style: none;
  }

  .snslist__item {
    height: 1.5rem;
    margin: 0 5px;
    width: 1.5rem;
  }

  .snsicon {
    display: block;
    height: 100%;
    object-fit: contain;
    object-position: center center;
    width: 100%;
  }

  @media (prefers-color-scheme: dark) {
    .mail {
      filter: invert(100%) hue-rotate(180deg);
    }
  }
</style>
<footer class="footer">
  <ul class="snslist footer__snslist">
    <li class="snslist__item">
      <a
        href="https://twitter.com/cuttlefish_math"
        target="_blank"
        rel="noreferrer"
      >
        <img class="snsicon" src={twitter} alt="Twitter" />
      </a>
    </li>
    <li class="snslist__item">
      <mail-me>
        <img class="mail snsicon" src={mail} alt="メール" />
      </mail-me>
    </li>
  </ul>
  <small class="footer__copyright">&copy; 2023 cuttlefish_math</small>
</footer>
<script>
  import "./mailme";
</script>
